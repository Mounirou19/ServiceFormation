{% extends 'base.html.twig' %}
{% block title %}Modifier Client{% endblock %}
{% block body %}
<h2>Modifier le client</h2>
<form method="post" action="{{ path('user_client_edit', {id: client.id}) }}">
  <div class="mb-3">
    <label for="siren" class="form-label">SIREN</label>
    <input type="text" class="form-control" id="siren" name="siren" value="{{ client.siren }}" required>
  </div>
  <div class="mb-3">
    <label for="iban" class="form-label">IBAN</label>
    <input type="text" class="form-control" id="iban" name="iban" value="{{ client.iban }}" required>
  </div>
  <div class="mb-3">
    <label for="adresse" class="form-label">Adresse</label>
    <input type="text" class="form-control" id="adresse" name="adresse" value="{{ client.adresse }}" required>
  </div>
  <div class="mb-3">
    <label for="contact_facturation" class="form-label">Contact Facturation</label>
    <input type="text" class="form-control" id="contact_facturation" name="contact_facturation" value="{{ client.contactFacturation }}" required>
  </div>
  <div class="mb-3">
    <label for="commission" class="form-label">Commission</label>
    <input type="number" class="form-control" id="commission" name="commission" value="{{ client.commission }}" step="0.01" required>
  </div>
  <button type="submit" class="btn btn-primary">Modifier</button>
</form>
{% endblock %}
