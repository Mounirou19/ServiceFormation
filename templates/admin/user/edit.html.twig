{% extends 'base.html.twig' %}

{% block title %}Modifier l'Utilisateur{% endblock %}

{% block body %}
<h2>Modifier l'Utilisateur</h2>
<form method="post" action="{{ path('admin_user_edit', {id: user.id}) }}">
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" required>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Mot de passe (laisser vide pour ne pas modifier)</label>
    <input type="password" class="form-control" id="password" name="password">
  </div>
  <div class="mb-3">
    <label for="roles" class="form-label">RÃ´les</label>
    <select class="form-control" id="roles" name="role">
      <option value="ROLE_USER" {% if 'ROLE_USER' in user.roles %}selected{% endif %}>Utilisateur</option>
      <option value="ROLE_ADMIN" {% if 'ROLE_ADMIN' in user.roles %}selected{% endif %}>Administrateur</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Modifier l'utilisateur</button>
</form>
{% endblock %}
