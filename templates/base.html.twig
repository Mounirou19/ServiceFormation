<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Training Management{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/jquery.dataTables.min.css">
    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Training Management</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto">
            {% if is_granted('ROLE_ADMIN') %}
              <li class="nav-item"><a class="nav-link" href="{{ path('admin_user_index') }}">Utilisateurs</a></li>
            {% endif %}
            <li class="nav-item"><a class="nav-link" href="{{ path('user_client_index') }}">Clients</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('user_project_index') }}">Projets</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('user_appel_fonds_index') }}">Appels de Fonds</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('user_session_index') }}">Sessions</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('user_formation_index') }}">Formations</a></li>
          </ul>
          <ul class="navbar-nav">
            {% if app.user %}
              <li class="nav-item"><a class="nav-link" href="{{ path('logout') }}">DÃ©connexion</a></li>
            {% else %}
              <li class="nav-item"><a class="nav-link" href="{{ path('login') }}">Connexion</a></li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      {% block body %}{% endblock %}
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
  </body>
</html>
